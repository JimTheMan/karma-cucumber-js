{
  "name": "karma-cucumber-js",
  "version": "0.1.0",
  "description": "Karma adapter for running Cucumber.js features",
  "main": "lib/index.js",
  "scripts": {
    "build": "./scripts/build.sh",
    "test": "./node_modules/.bin/cucumber.js ./features",
    "update-components": "npm update && tsd update --save --overwrite",
    "updates": "npm outdated"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/eugene-sea/karma-cucumber-js.git"
  },
  "keywords": [
    "karma-plugin",
    "karma-framework",
    "cucumberjs",
    "cucumber"
  ],
  "author": "Eugene Shalyuk",
  "license": "MIT",
  "devDependencies": {
    "cucumber": "^0.5.2",
    "karma": "^0.13.3",
    "karma-chrome-launcher": "^0.2.0",
    "should": "^7.0.2",
    "source-map-support": "^0.3.2",
    "tsd": "^0.6.3"
  },
  "peerDependencies": {
    "cucumber": "*",
    "jquery": "*"
  }
}
